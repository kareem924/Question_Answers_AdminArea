@using PagedList
@using PagedList.Mvc
<div id="adsTable">
    <div class="content-box-large">
        <div class="panel-heading">
            <div class="panel-title"><h2>Ads</h2></div>
        </div>
        <div class="panel-body">
            <div class="table-responsive">

                <table class="table">
                    <tr>
                        <th>
                            <strong> Alternate Text</strong>
                        </th>
                        <th>
                            <strong> Keyword</strong>
                        </th>


                        <th>Action</th>
                    </tr>

                    @foreach (var item in ViewBag.OnePageOfAds)
                    {
                        <tr>
                            <td>
                                @if (item.Image != null)
                                {
                                    <img src="data:image/png;base64,@Convert.ToBase64String(item.Image, 0, item.Image.Length)" width="200" class="img-thumbnail img-responsive" />
                                }
                               
                            </td>
                            <td>
                                @item.AlternateText
                            </td>
                            <td>
                                @item.Keyword
                            </td>
                            <td>
                                @Html.ActionLink("Edit", "Edit", new { id = @item.ID }, new { @class = "btn btn-warning btn-xs", data_modal = "" }) 



                              

                            </td>
                        </tr>
                    }

                </table>
                @Html.PagedListPager((IPagedList)ViewBag.OnePageOfAds, page => Url.Action("AdsList", new { page }), PagedListRenderOptions.EnableUnobtrusiveAjaxReplacing(new AjaxOptions() { HttpMethod = "GET", UpdateTargetId = "adsTable" }))
            </div>
        </div>
    </div>
</div>

