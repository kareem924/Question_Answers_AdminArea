@model GawayzAdmin.ViewModels.SurveyViewModel
<script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>
<div class="row">
    <div class="col-lg-12">
        <div class="form-group">
            <label for="QuestionText" class="col-sm-4 control-label">Question Text</label>
            <div class="col-sm-8">
                @Html.TextBoxFor(x => x.SurveyQuestionText, new { @class = "form-control", placeholder = "Question Text" })
                @Html.ValidationMessageFor(model => model.SurveyQuestionText, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="form-group">
            <label for="GroupNo" class="col-sm-4 control-label">Group No.</label>
            <div class="col-sm-8">
                @Html.TextBoxFor(x => x.GroupNo, new { @class = "form-control", placeholder = "Group No." })
                @Html.ValidationMessageFor(model => model.GroupNo, "", new { @class = "text-danger" })

            </div>
        </div>
        <div class="form-group">
            <label for="GroupNo" class="col-sm-4 control-label">Survey Question No.</label>
            <div class="col-sm-8">
                @Html.TextBoxFor(x => x.SurveyQuestionNo, new { @class = "form-control", placeholder = "Survey Question No." })
                @Html.ValidationMessageFor(model => model.SurveyQuestionNo, "", new { @class = "text-danger" })

            </div>
        </div>
    </div>
</div>
