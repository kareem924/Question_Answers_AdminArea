<p id="MessageToClient" data-bind="text: MessageToClient"></p>

<form>
    <div class="row">
        <div class="col-lg-12">

            <label class="control-label" for="CustomerName">Question Text:</label>
            <input class="form-control" name="CustomerName" data-bind="value: CustomerName, event: {change: flagSalesOrderAsEdited}" />

        </div>
    </div>
    <div class="row">
        <div class="col-lg-6">
            <div class="form-group">
                <label class="control-label" for="PONumber">Product:</label>
                <select class="form-control" id="sel1">
                    <option>Juhayna</option>
                    <option>Knorr</option>
                    <option>Gif</option>

                </select>
            </div>
        </div>
        <div class="col-lg-6">
            <div class="form-group">
                <label class="control-label" for="PONumber">Group No.:</label>
                <input class="form-control" name="PONumber" data-bind="value: PONumber, event: {change: flagSalesOrderAsEdited}" />
            </div>
        </div>
    </div>
    <table class="table table-striped">
        <tr>

            <th class="text-left">Choice Text</th>
            <th class="text-left">Choice Letter</th>
            <th class="text-left">Correct Choice</th>
            <th><button class="btn btn-info btn-xs" data-bind="click: addSalesOrderItem">Add</button></th>
        </tr>
        <tbody data-bind="foreach: SalesOrderItems">
            <tr>
                <td class="form-group"><input name="ProductCode" class="form-control input-sm" data-bind="attr: {'id': 'ProductCode_' + $index()}, value: ProductCode, event: {change: flagSalesOrderItemAsEdited}, hasfocus: true" /></td>
                <td class="form-group"><input name="Quantity" class="form-control input-sm text-right" data-bind="attr: {'id': 'Quantity_' + $index()}, value: Quantity, event: {change: flagSalesOrderItemAsEdited}" /></td>
                <td>
                    <div class="checkbox">
                        <label><input type="checkbox" value=""></label>
                    </div>
                </td>
                <td class="form-group"><button class="btn btn-danger btn-xs" data-bind="click: $parent.deleteSalesOrderItem">Delete</button></td>
            </tr>
        </tbody>

    </table>

    <p>
        <a class="btn btn-default btn-sm" href="/">&laquo; Back to List</a>
    </p>

    <p>
        <button class="btn btn-primary" type="submit">Save</button>
    </p>
</form>

